<dl class="dl-horizontal">
    <dt>Date</dt>
    <dd>{{ "now"|date('c') }}</dd>
    <dt>IP</dt>
    <dd>{{ app.request.getClientIps()|join(';') }}</dd>
    <dt>URL</dt>
    <dd>{{ app.request.getUri() }}</dd>
    <dt>Class</dt>
    <dd>{{ exception.getStatusCode() }} - {{ exception.class }}</dd>
    <dt>Message</dt>
    <dd>{{ exception.message }}</dd>
</dl>

<p><button class="btn btn-default" onclick="window.history.go(-1);">Back</button></p>

