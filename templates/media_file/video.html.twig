<link href="{{ asset_prefix|default('') ~ asset('node_modules/video.js/dist/video-js.min.css') }}" rel="stylesheet">
<script src="{{ asset_prefix|default('') ~ asset('node_modules/video.js/dist/video.min.js') }}"></script>

<video
    id="my-player"
    class="video-js"
    controls
    preload="auto"
    poster="{{ path('media_file_tn', {'id': mediaFile.id}) }}"
    data-setup='{}'>
  <source src="{{ path('media_file_raw', {'id': mediaFile.id}) }}" type="{{ mediaFile.mimetype }}"></source>
  <p class="vjs-no-js">
    To view this video please enable JavaScript, and consider upgrading to a
    web browser that
    <a href="http://videojs.com/html5-video-support/" target="_blank">
      supports HTML5 video
    </a>
  </p>
</video>
