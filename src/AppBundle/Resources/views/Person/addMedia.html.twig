{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Add media</h1>
    <p>Use the form below to search for media. Click the thumbnail image to associate
        the media with <a href='{{ path('person_show', {'id': person.id}) }}'>{{ person.fullname }}</a>.
    </p>
{% endblock %}

{% block body %}

    <form method="get" action="{{ path('person_add_media', {'id': person.id}) }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
                <p class="help-block col-sm-offset-2">Boolean, full text, search any metadata field for the term.</p>
            </div>
        </fieldset>
    </form>

    {% if results|length %}
        <div class='add_media'>
            {% for result in results %}
                {% set mediaFile = result %}
                <div class='row {% if person.hasMediaFile(mediaFile) %}associated{% endif %}'>
                    <div class='col-sm-4'>
                        {% if person.hasMediaFile(mediaFile) %}
                            <img src="{{ path('media_file_tn', {'id': mediaFile.id}) }}" class="img-thumbnail">
                        {% else %}
                            <a href="{{ path('person_add_media', { 'id': person.id, 'q': q, 'page': results.getCurrentPageNumber, 'addId': mediaFile.id }) }}">
                                <img src="{{ path('media_file_tn', {'id': mediaFile.id}) }}" class="img-thumbnail">
                            </a>
                        {% endif %}
                    </div>
                    <div class='col-sm-8'>
                        {{ mediaFile.getMetadataFields('dc_title', false) }}
                        <dl class="dl-horizontal">
                            <dt>Id</dt>
                            <dd>{{ mediaFile.id }}</dd>
                            <dt>File type</dt>
                            <dd>{{ mediaFile.mimeType }}</dd>
                            <dt>Original name</dt>
                            <dd>{{ mediaFile.originalName }}</dd>
                            <dt>Uploaded</dt>
                            <dd>{{ mediaFile.updated|date }}</dd>
                            <dt>URL</dt>
                            <dd>
                                <a href="{{ path('media_file_raw', {'id': mediaFile.id}) }}">
                                    {{ url('media_file_raw', {'id': mediaFile.id}) }}
                                </a>
                            </dd>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(results) }}
        </div>
    {% endif %}

{% endblock %}
